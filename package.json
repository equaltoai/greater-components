{
  "name": "greater-components",
  "version": "0.1.9",
  "private": true,
  "description": "Fediverse UI components built with Svelte 5, TypeScript, and pnpm workspaces",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equaltoai/greater-components.git"
  },
  "license": "AGPL-3.0-only",
  "author": "Equal To AI",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build && pnpm format:types",
    "build:registry": "pnpm build && node scripts/generate-registry-index.js",
    "generate-registry": "node scripts/generate-registry-index.js",
    "generate-registry:dry": "node scripts/generate-registry-index.js --dry-run",
    "generate-registry:validate": "node scripts/generate-registry-index.js --validate",
    "generate:graphql": "graphql-codegen --config codegen.ts",
    "generate:openapi": "openapi-typescript docs/lesser/contracts/openapi.yaml -o packages/adapters/src/rest/generated/lesser-api.ts",
    "generate": "pnpm generate:graphql && pnpm generate:openapi",
    "changeset": "changeset",
    "check": "pnpm -r check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm --parallel --filter @equaltoai/playground --filter @greater-components/docs run dev",
    "dev:all": "pnpm -r --parallel dev",
    "dev:playground:csr": "pnpm --filter @equaltoai/playground dev --mode csr",
    "sveltekit:sync": "pnpm --filter @equaltoai/playground exec svelte-kit sync && pnpm --filter @greater-components/docs exec svelte-kit sync",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:types": "prettier --write \"packages/**/src/**/*.d.ts\"",
    "check:svelte": "pnpm --dir packages/primitives exec svelte-check --tsconfig ./tsconfig.check.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.svelte",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.svelte --fix",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "test": "pnpm -r --filter \"!@equaltoai/greater-components-testing\" test",
    "test:coverage": "pnpm -r --filter \"!@equaltoai/greater-components-testing\" test:coverage",
    "test:coverage:report": "COVERAGE_LINES=75 COVERAGE_FUNCTIONS=75 COVERAGE_STATEMENTS=75 COVERAGE_BRANCHES=60 node scripts/aggregate-coverage.js",
    "test:e2e": "pnpm -r test:e2e",
    "test:unit": "pnpm -r test:unit",
    "test:a11y": "pnpm --filter @equaltoai/greater-components-testing run test:a11y",
    "test:a11y:ci": "node scripts/run-a11y-ci.js",
    "test:visual": "pnpm -r test:visual",
    "validate:cli": "node scripts/audit-cli-registry.mjs",
    "validate:csp": "node scripts/audit-csp.mjs",
    "validate:deps": "node scripts/audit-runtime-deps.mjs",
    "validate:dist": "node scripts/audit-dist-hygiene.mjs",
    "validate:exports": "node scripts/audit-exports.mjs",
    "validate:ids": "node scripts/validate-ids.js",
    "validate:versions": "node scripts/validate-release-versions.js",
    "validate:package": "pnpm validate:exports && pnpm validate:dist && pnpm validate:deps && pnpm validate:cli && pnpm validate:tokens && pnpm validate:ids && pnpm validate:csp && pnpm validate:versions",
    "validate:registry": "node scripts/validate-registry-index.js --strict && pnpm validate:versions",
    "validate:tokens": "node scripts/audit-tokens-placeholders.mjs",
    "playwright:install": "pnpm --filter @equaltoai/greater-components-testing exec playwright install",
    "playwright:install:with-deps": "pnpm --filter @equaltoai/greater-components-testing exec playwright install --with-deps",
    "typecheck": "NODE_OPTIONS='--max-old-space-size=16384' pnpm run sveltekit:sync && NODE_OPTIONS='--max-old-space-size=16384' tsc --noEmit",
    "typecheck:consumer": "tsc --noEmit -p tsconfig.consumer.json",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "analyze:bundles": "node scripts/analyze-bundles.js",
    "release:prepare": "node scripts/prepare-github-release.js",
    "release:cut": "node scripts/cut-github-release.js",
    "release:tag": "node scripts/release-tag.js",
    "release:artifacts": "bash scripts/build-release-artifacts.sh",
    "release:tag:dry": "node scripts/release-tag.js --dry-run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/fragment-matcher": "^6.0.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/typed-document-node": "^6.1.5",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@sveltejs/package": "^2.5.7",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "fast-check": "^4.5.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-html-parser": "^7.0.2",
    "openapi-typescript": "^7.12.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "undici": "^7.21.0"
  },
  "pnpm": {
    "overrides": {
      "cookie": "^0.7.0",
      "devalue": "^5.6.2",
      "esbuild": "^0.25.8",
      "@isaacs/brace-expansion": "^5.0.1",
      "lodash": "^4.17.23",
      "mdast-util-to-hast": "^13.2.1",
      "node-domexception": "^2.0.2",
      "tmp": "^0.2.4",
      "undici": "^7.5.0",
      "workbox-build": "^7.4.0"
    }
  }
}
