{
  "name": "greater-components",
  "version": "4.1.0",
  "private": true,
  "description": "Fediverse UI components built with Svelte 5, TypeScript, and pnpm workspaces",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equaltoai/greater-components.git"
  },
  "license": "AGPL-3.0-only",
  "author": "Equal To AI",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "changeset": "changeset",
    "check": "pnpm -r check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm --parallel --filter @equaltoai/playground --filter @greater-components/docs run dev",
    "dev:all": "pnpm -r --parallel dev",
    "dev:playground:csr": "pnpm --filter @equaltoai/playground dev --mode csr",
    "sveltekit:sync": "pnpm --filter @equaltoai/playground exec svelte-kit sync && pnpm --filter @greater-components/docs exec svelte-kit sync",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.svelte",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.svelte --fix",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "release": "changeset publish",
    "test": "pnpm -r --filter \"!@equaltoai/greater-components-testing\" test",
    "test:coverage": "pnpm -r --filter \"!@equaltoai/greater-components-testing\" test:coverage",
    "test:coverage:report": "node scripts/aggregate-coverage.js",
    "test:e2e": "pnpm -r test:e2e",
    "test:unit": "pnpm -r test:unit",
    "test:a11y": "pnpm -r test:a11y",
    "test:visual": "pnpm -r test:visual",
    "typecheck": "pnpm run sveltekit:sync && tsc --noEmit",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "publish:jsr": "node scripts/publish-jsr.js",
    "publish:jsr:dry": "node scripts/publish-jsr.js --dry-run",
    "publish:jsr:single": "node scripts/publish-jsr.js --package",
    "analyze:bundles": "node scripts/analyze-bundles.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.1",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/fragment-matcher": "^6.0.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/typed-document-node": "^6.1.3",
    "@graphql-codegen/typescript": "^5.0.5",
    "@graphql-codegen/typescript-operations": "^5.0.5",
    "@sveltejs/package": "^2.5.6",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.14",
    "svelte-check": "^4.3.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.12"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "undici": "^7.16.0"
  },
  "pnpm": {
    "overrides": {
      "cookie": "^0.7.0",
      "devalue": "^5.4.2",
      "esbuild": "^0.25.8",
      "tmp": "^0.2.4",
      "undici": "^7.5.0",
      "workbox-build": "^7.4.0",
      "node-domexception": "^2.0.2"
    }
  }
}
