{
  "name": "@equaltoai/greater-components-cli",
  "private": true,
  "version": "1.0.0",
  "description": "CLI for adding Greater Components to your project",
  "type": "module",
  "bin": {
    "greater": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "greater",
    "components",
    "cli",
    "activitypub",
    "fediverse",
    "svelte"
  ],
  "author": "Greater Components Team",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.2",
    "ora": "^9.0.0",
    "prompts": "^2.4.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.2",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
