{
  "name": "@equaltoai/greater-components-social",
  "private": true,
  "version": "0.1.9-rc.0",
  "type": "module",
  "description": "Social/Twitter-style UI components for Greater Components (formerly fediverse)",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/faces/social"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./manifest.json": "./manifest.json",
    "./style.css": "./dist/greater-components-fediverse.css",
    "./theme.css": "./dist/greater-components-fediverse.css",
    "./adapters/graphql": {
      "types": "./dist/adapters/graphql/index.d.ts",
      "import": "./dist/adapters/graphql/index.js"
    },
    "./components/Status": {
      "types": "./dist/components/Status/index.d.ts",
      "svelte": "./src/components/Status/index.ts",
      "import": "./dist/components/Status/index.js"
    },
    "./components/Profile": {
      "types": "./dist/components/Profile/index.d.ts",
      "svelte": "./src/components/Profile/index.ts",
      "import": "./dist/components/Profile/index.js"
    },
    "./components/Lists": {
      "types": "./dist/components/Lists/index.d.ts",
      "svelte": "./src/components/Lists/index.ts",
      "import": "./dist/components/Lists/index.js"
    },
    "./components/Filters": {
      "types": "./dist/components/Filters/index.d.ts",
      "svelte": "./src/components/Filters/index.ts",
      "import": "./dist/components/Filters/index.js"
    },
    "./components/Hashtags": {
      "types": "./dist/components/Hashtags/index.d.ts",
      "svelte": "./src/components/Hashtags/index.ts",
      "import": "./dist/components/Hashtags/index.js"
    },
    "./components/Timeline": {
      "types": "./dist/components/Timeline/index.d.ts",
      "svelte": "./src/components/Timeline/index.ts",
      "import": "./dist/components/Timeline/index.js"
    },
    "./generics": {
      "types": "./dist/generics/index.d.ts",
      "import": "./dist/generics/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "import": "./dist/patterns/index.js"
    },
    "./src/mockData": {
      "import": "./src/mockData.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "pnpm --filter @equaltoai/greater-components-adapters build",
    "build": "vite build && tsc -b --force --emitDeclarationOnly && node scripts/fix-dollar-vars.js && node ../../../scripts/copy-svelte-to-dist.js && cp src/theme.css dist/greater-components-fediverse.css",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@equaltoai/greater-components-adapters": "workspace:*",
    "@equaltoai/greater-components-admin": "workspace:*",
    "@equaltoai/greater-components-auth": "workspace:*",
    "@equaltoai/greater-components-compose": "workspace:*",
    "@equaltoai/greater-components-headless": "workspace:^",
    "@equaltoai/greater-components-icons": "workspace:*",
    "@equaltoai/greater-components-messaging": "workspace:*",
    "@equaltoai/greater-components-notifications": "workspace:*",
    "@equaltoai/greater-components-primitives": "workspace:*",
    "@equaltoai/greater-components-search": "workspace:*",
    "@equaltoai/greater-components-tokens": "workspace:*",
    "@equaltoai/greater-components-utils": "workspace:*",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@tanstack/svelte-virtual": "^3.13.18"
  },
  "devDependencies": {
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "@playwright/test": "^1.58.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/svelte": "5.3.1",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "axe-core": "^4.11.1",
    "jsdom": "^28.0.0",
    "svelte": "^5.50.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "svelte": "^5.43.6"
  }
}
