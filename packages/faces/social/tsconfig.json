{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "paths": {
      "@equaltoai/greater-components-adapters": ["../../adapters/src/index.ts"],
      "@equaltoai/greater-components-adapters/*": ["../../adapters/src/*"],
      "@equaltoai/greater-components-auth": ["../../shared/auth/src/index.ts"],
      "@equaltoai/greater-components-admin": ["../../shared/admin/src/index.ts"],
      "@equaltoai/greater-components-compose": ["../../shared/compose/src/index.ts"],
      "@equaltoai/greater-components-messaging": ["../../shared/messaging/src/index.ts"],
      "@equaltoai/greater-components-search": ["../../shared/search/src/index.ts"],
      "@equaltoai/greater-components-notifications": ["../../shared/notifications/src/index.ts"]
    }
  },
  "include": ["src/**/*", "src/**/*.svelte"],
  "exclude": ["dist", "node_modules", "tests", "stories"]
}
