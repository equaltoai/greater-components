{
  "name": "@equaltoai/greater-components-community",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Community/Reddit-style UI components for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/faces/community"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./manifest.json": "./manifest.json",
    "./style.css": "./dist/greater-components-community.css",
    "./theme.css": "./dist/greater-components-community.css",
    "./components/Community": {
      "types": "./dist/components/Community/index.d.ts",
      "svelte": "./src/components/Community/index.ts",
      "import": "./dist/components/Community/index.js"
    },
    "./components/Post": {
      "types": "./dist/components/Post/index.d.ts",
      "svelte": "./src/components/Post/index.ts",
      "import": "./dist/components/Post/index.js"
    },
    "./components/Thread": {
      "types": "./dist/components/Thread/index.d.ts",
      "svelte": "./src/components/Thread/index.ts",
      "import": "./dist/components/Thread/index.js"
    },
    "./components/Voting": {
      "types": "./dist/components/Voting/index.d.ts",
      "svelte": "./src/components/Voting/index.ts",
      "import": "./dist/components/Voting/index.js"
    },
    "./components/Flair": {
      "types": "./dist/components/Flair/index.d.ts",
      "svelte": "./src/components/Flair/index.ts",
      "import": "./dist/components/Flair/index.js"
    },
    "./components/Moderation": {
      "types": "./dist/components/Moderation/index.d.ts",
      "svelte": "./src/components/Moderation/index.ts",
      "import": "./dist/components/Moderation/index.js"
    },
    "./components/Wiki": {
      "types": "./dist/components/Wiki/index.d.ts",
      "svelte": "./src/components/Wiki/index.ts",
      "import": "./dist/components/Wiki/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "import": "./dist/patterns/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && tsc -b --force --emitDeclarationOnly && node ../../../scripts/copy-svelte-to-dist.js && cp src/theme.css dist/greater-components-community.css",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@equaltoai/greater-components-admin": "workspace:*",
    "@equaltoai/greater-components-auth": "workspace:*",
    "@equaltoai/greater-components-content": "workspace:*",
    "@equaltoai/greater-components-headless": "workspace:^",
    "@equaltoai/greater-components-icons": "workspace:*",
    "@equaltoai/greater-components-notifications": "workspace:*",
    "@equaltoai/greater-components-primitives": "workspace:*",
    "@equaltoai/greater-components-search": "workspace:*",
    "@equaltoai/greater-components-tokens": "workspace:*",
    "@equaltoai/greater-components-utils": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.2",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/svelte": "5.3.1",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^27.4.0",
    "svelte": "^5.46.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "svelte": "^5.43.6"
  }
}
