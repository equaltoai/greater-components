{
  "name": "@greater/primitives",
  "version": "1.0.0",
  "type": "module",
  "description": "Primitive UI components for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/greater/greater-components.git",
    "directory": "packages/primitives"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./Button": {
      "types": "./dist/components/Button.d.ts",
      "svelte": "./dist/components/Button.svelte.js",
      "import": "./dist/components/Button.js"
    },
    "./Modal": {
      "types": "./dist/components/Modal.d.ts",
      "svelte": "./dist/components/Modal.svelte.js",
      "import": "./dist/components/Modal.js"
    },
    "./TextField": {
      "types": "./dist/components/TextField.d.ts",
      "svelte": "./dist/components/TextField.svelte.js",
      "import": "./dist/components/TextField.js"
    },
    "./Menu": {
      "types": "./dist/components/Menu.d.ts",
      "svelte": "./dist/components/Menu.svelte.js",
      "import": "./dist/components/Menu.js"
    },
    "./Tooltip": {
      "types": "./dist/components/Tooltip.d.ts",
      "svelte": "./dist/components/Tooltip.svelte.js",
      "import": "./dist/components/Tooltip.js"
    },
    "./Tabs": {
      "types": "./dist/components/Tabs.d.ts",
      "svelte": "./dist/components/Tabs.svelte.js",
      "import": "./dist/components/Tabs.js"
    },
    "./Avatar": {
      "types": "./dist/components/Avatar.d.ts",
      "svelte": "./dist/components/Avatar.svelte.js",
      "import": "./dist/components/Avatar.js"
    },
    "./Skeleton": {
      "types": "./dist/components/Skeleton.d.ts",
      "svelte": "./dist/components/Skeleton.svelte.js",
      "import": "./dist/components/Skeleton.js"
    },
    "./ThemeSwitcher": {
      "types": "./dist/components/ThemeSwitcher.d.ts",
      "svelte": "./dist/components/ThemeSwitcher.svelte.js",
      "import": "./dist/components/ThemeSwitcher.js"
    },
    "./ThemeProvider": {
      "types": "./dist/components/ThemeProvider.d.ts",
      "svelte": "./dist/components/ThemeProvider.svelte.js",
      "import": "./dist/components/ThemeProvider.js"
    },
    "./components/*": "./dist/components/*",
    "./stores/*": "./dist/stores/*",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && pnpm build:css",
    "build:css": "node scripts/build-css.js",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@greater/tokens": "workspace:*",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@greater/tokens": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.2.1",
    "jsdom": "^24.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}