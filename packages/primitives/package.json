{
  "name": "@greater/primitives",
  "version": "1.0.0",
  "type": "module",
  "description": "Primitive UI components for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/greater/greater-components.git",
    "directory": "packages/primitives"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./components/*": "./dist/components/*",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && pnpm build:css",
    "build:css": "node scripts/build-css.js",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@greater/tokens": "workspace:*",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@greater/tokens": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^1.2.1",
    "jsdom": "^24.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}