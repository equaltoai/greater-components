{
  "name": "@equaltoai/greater-components-content",
  "version": "0.1.2",
  "type": "module",
  "description": "Content rendering components (CodeBlock, MarkdownRenderer) for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/content"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./CodeBlock": {
      "types": "./dist/components/CodeBlock.svelte.d.ts",
      "svelte": "./dist/components/CodeBlock.svelte",
      "import": "./dist/components/CodeBlock.svelte"
    },
    "./MarkdownRenderer": {
      "types": "./dist/components/MarkdownRenderer.svelte.d.ts",
      "svelte": "./dist/components/MarkdownRenderer.svelte",
      "import": "./dist/components/MarkdownRenderer.svelte"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "svelte-package --output dist",
    "dev": "svelte-package --output dist --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@equaltoai/greater-components-primitives": "workspace:*",
    "@equaltoai/greater-components-tokens": "workspace:*",
    "svelte": "^5.43.6"
  },
  "dependencies": {
    "hast-util-sanitize": "^5.0.2",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.22.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@equaltoai/greater-components-primitives": "workspace:*",
    "@equaltoai/greater-components-tokens": "workspace:*",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/svelte": "^5.3.1",
    "@types/hast": "^3.0.4",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "svelte": "^5.49.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "private": true
}
