{
  "name": "@equaltoai/greater-components-adapters",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "description": "Transport adapters and state management for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/adapters"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc -b --force --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@apollo/client-react-streaming": "^0.14.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "graphql": "^16.12.0",
    "graphql-ws": "^6.0.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "ws": "^8.18.3"
  },
  "peerDependencies": {
    "svelte": "^5.43.6"
  }
}
