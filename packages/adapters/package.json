{
  "name": "@equaltoai/greater-components-adapters",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "description": "Transport adapters and state management for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/adapters"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.11.0",
    "@apollo/client-react-streaming": "^0.14.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@vitest/ui": "^2.0.5",
    "jsdom": "^24.1.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^2.0.5",
    "ws": "^8.16.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  }
}
