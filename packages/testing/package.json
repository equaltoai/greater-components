{
  "name": "@equaltoai/greater-components-testing",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Shared testing utilities for accessibility, keyboard navigation, and visual regression testing",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/testing"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "import": "./dist/playwright/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest/index.d.ts",
      "import": "./dist/vitest/index.js"
    },
    "./a11y": {
      "types": "./dist/a11y/index.d.ts",
      "import": "./dist/a11y/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build && tsc --build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:demo": "playwright test --config=playwright.demo.config.ts",
    "test:demo:csr": "playwright test --config=playwright.demo.csr.config.ts",
    "test:e2e": "pnpm run test:demo && pnpm run test:demo:csr",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "axe-core": "^4.11.0",
    "axe-playwright": "^2.2.2",
    "focus-trap": "^7.7.0",
    "tabbable": "^6.3.0"
  },
  "devDependencies": {
    "@percy/playwright": "^1.0.10",
    "@playwright/test": "^1.57.0",
    "@testing-library/svelte": "^5.2.10",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "chromatic": "^13.3.4",
    "commander": "^14.0.2",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "svelte": "^5.43.14",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "svelte": "^5.43.6"
  }
}
