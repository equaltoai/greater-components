{
  "name": "@greater/fediverse",
  "version": "1.0.0",
  "type": "module",
  "description": "Fediverse UI components built with Svelte 5",
  "license": "AGPL-3.0-only",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./src/mockData": {
      "import": "./src/mockData.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@greater/tokens": "workspace:*",
    "@greater/utils": "workspace:*",
    "@greater/primitives": "workspace:*",
    "@greater/icons": "workspace:*",
    "@tanstack/svelte-virtual": "^3.10.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/svelte": "^5.2.1",
    "@types/node": "^20.14.0",
    "@vitest/ui": "^2.0.5",
    "axe-core": "^4.10.0",
    "jsdom": "^24.1.1",
    "storybook": "^8.6.14",
    "svelte": "^5.0.0",
    "typescript": "^5.5.4",
    "vite": "^7.1.1",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  }
}