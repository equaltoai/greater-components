{
  "name": "@equaltoai/greater-components-fediverse",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "description": "Fediverse UI components built with Svelte 5",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/fediverse"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./greater-components-fediverse.css": "./dist/theme.css",
    "./src/mockData": {
      "import": "./src/mockData.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "pnpm --filter @equaltoai/greater-components-adapters build",
    "build": "vite build && tsc -b --force --emitDeclarationOnly && node scripts/fix-dollar-vars.js && cp src/theme.css dist/theme.css",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@equaltoai/greater-components-adapters": "workspace:*",
    "@equaltoai/greater-components-headless": "workspace:^",
    "@equaltoai/greater-components-icons": "workspace:*",
    "@equaltoai/greater-components-primitives": "workspace:*",
    "@equaltoai/greater-components-tokens": "workspace:*",
    "@equaltoai/greater-components-utils": "workspace:*",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@tanstack/svelte-virtual": "^3.13.12"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/svelte": "5.2.9",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "axe-core": "^4.11.0",
    "jsdom": "^27.2.0",
    "svelte": "^5.43.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.12"
  },
  "peerDependencies": {
    "svelte": "^5.43.6"
  }
}
