{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@equaltoai/greater-components-adapters": ["../adapters/src/index.ts"],
      "@equaltoai/greater-components-adapters/*": ["../adapters/src/*"]
    }
  },
  "references": [{ "path": "../adapters" }],
  "include": ["src/**/*", "src/**/*.svelte"],
  "exclude": ["dist", "node_modules", "tests", "stories"]
}
