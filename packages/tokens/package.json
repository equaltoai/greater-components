{
  "name": "@equaltoai/greater-components-tokens",
  "private": true,
  "version": "0.1.5-rc.0",
  "type": "module",
  "description": "Design tokens for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/equaltoai/greater-components.git",
    "directory": "packages/tokens"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./animations.css": "./dist/animations.css",
    "./high-contrast.css": "./dist/high-contrast.css",
    "./themes/*": "./dist/themes/*",
    "./palettes/*": "./dist/palettes/*",
    "./scss": "./dist/scss/_index.scss",
    "./scss/*": "./dist/scss/*",
    "./css/*": "./dist/css/*",
    "./js": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "node scripts/build.js && tsc",
    "dev": "node scripts/build.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "chokidar": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
