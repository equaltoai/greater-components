{
  "name": "@greater/tokens",
  "version": "1.0.0",
  "type": "module",
  "description": "Design tokens for Greater Components",
  "license": "AGPL-3.0-only",
  "author": "Greater Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/greater/greater-components.git",
    "directory": "packages/tokens"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css",
    "./themes/*": "./dist/themes/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "node scripts/build.js && tsc",
    "dev": "node scripts/build.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.2.1",
    "chokidar": "^3.5.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}