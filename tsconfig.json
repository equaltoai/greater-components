{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["packages/**/*", "packages/**/*.json", "apps/**/*", "scripts/**/*.ts"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/build",
    "**/.svelte-kit",
    "**/storybook-static",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.stories.ts",
    "**/scripts/*.js",
    "**/fixtures/**",
    "packages/*/dist/**",
    "packages/*/*/dist/**",
    "packages/*/*/*/dist/**"
  ]
}
