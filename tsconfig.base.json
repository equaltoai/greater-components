{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "rootDirs": [
      ".",
      "./apps/playground/src",
      "./apps/playground/.svelte-kit/types/src",
      "./apps/docs/src",
      "./apps/docs/.svelte-kit/types/src"
    ],
    "jsx": "preserve",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "$lib": ["./apps/playground/src/lib", "./apps/docs/src/lib"],
      "$lib/*": ["./apps/playground/src/lib/*", "./apps/docs/src/lib/*"],
      "@equaltoai/greater-components-adapters": ["./packages/adapters/src/index.ts"],
      "@equaltoai/greater-components-adapters/*": ["./packages/adapters/src/*"],
      "@equaltoai/greater-components-fediverse": ["./packages/fediverse/src/index.ts"],
      "@equaltoai/greater-components-fediverse/*": ["./packages/fediverse/src/*"],
      "@equaltoai/greater-components-headless": ["./packages/headless/src/index.ts"],
      "@equaltoai/greater-components-headless/*": ["./packages/headless/src/*"],
      "@equaltoai/greater-components-icons": ["./packages/icons/src/index.ts"],
      "@equaltoai/greater-components-icons/*": ["./packages/icons/src/*"],
      "@equaltoai/greater-components-primitives": ["./packages/primitives/src/index.ts"],
      "@equaltoai/greater-components-primitives/*": ["./packages/primitives/src/*"],
      "@equaltoai/greater-components-tokens": ["./packages/tokens/src/index.ts"],
      "@equaltoai/greater-components-tokens/*": ["./packages/tokens/src/*"],
      "@equaltoai/greater-components-utils": ["./packages/utils/src/index.ts"],
      "@equaltoai/greater-components-utils/*": ["./packages/utils/src/*"],
      "@equaltoai/greater-components-testing": ["./packages/testing/src/index.ts"],
      "@equaltoai/greater-components-testing/*": ["./packages/testing/src/*"],
      "@equaltoai/greater-components": ["./packages/greater-components/src/index.ts"],
      "@equaltoai/greater-components/*": ["./packages/greater-components/src/*"],
      "@equaltoai/greater-components-cli": ["./packages/cli/src/index.ts"],
      "@equaltoai/greater-components-cli/*": ["./packages/cli/src/*"]
    },

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": false,

    "incremental": true,
    "composite": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".svelte-kit",
    "coverage",
    "test-results",
    "playwright-report",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js"
  ]
}
